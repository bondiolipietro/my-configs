{
  "workbench.editor.decorations.badges": true,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.tree.indent": 8,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 120000,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.rulers": [90, 120],
  "editor.minimap.maxColumn": 70,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnEnter": "off",
  "explorer.sortOrder": "type",
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.shell.linux": "/bin/bash",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 90,
  "diffEditor.wordWrap": "on",
  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.printWidth": 90,
  // Window Settings
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "workbench.iconTheme": "material-icon-theme",
  // Files Settings
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  // Text Styling
  "editor.fontFamily": "JetBrains Mono, Fira Code, Source Code Pro, monospace",
  "editor.fontSize": 13,
  "editor.fontWeight": "400",
  "editor.letterSpacing": 1.2,
  "editor.lineHeight": 22,
  "editor.fontLigatures": false,
  "terminal.integrated.fontSize": 13,
  "editor.insertSpaces": true,
  // Cursor Settings
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  // Editor Performance
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/_site": true,
    "**/tmp": true,
    "**/*.pyc": true,
    "**/*.asset-cache": true,
    "**/*.cache": true,
    "**/*.jekyll-cache": true,
    "**/*.tweet-cache": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true,
    "**/*.coverage": true,
    "**/celerybeat-schedule": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  // Extens√µes
  "extensions.autoCheckUpdates": true,
  "extensions.autoUpdate": true,
  // Material Icon Theme
  "material-icon-theme.folders.color": "#2ba2fc",
  "material-icon-theme.folders.associations": {
    "protocols": "scripts",
    "presentation": "review",
    "base": "config",
    "worker": "tools",
    "workers": "tools",
    "logger": "log",
    "loggers": "log"
  },
  "material-icon-theme.files.associations": {
    "*.html": "html",
    "commitlintrc.json": "commitlint"
  },
  // Settings Sync
  "sync.autoDownload": true,
  "sync.autoUpload": true,
  "sync.quietSync": true,
  "sync.gist": "e8dc14ada6e82e93fac21ed26b2b5114",
  // Live Server
  "liveServer.settings.CustomBrowser": "firefox",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.fullReload": true,
  // Code Runner
  "code-runner.runInTerminal": true,
  // cSpell
  "cSpell.language": "en,pt",
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".vscode-insiders",
    ".*"
  ],
  "cSpell.userWords": [
    "Bondioli",
    "Devs",
    "Figma",
    "Seguranca",
    "Spotify",
    "Underslash",
    "autoincrement",
    "basestring",
    "bodyparser",
    "bondiolipietro",
    "changefreq",
    "commitlint",
    "criptomoedas",
    "deletar",
    "delslice",
    "dotenv",
    "execfile",
    "flexbox",
    "focusring",
    "getenv",
    "getslice",
    "globby",
    "horiz",
    "itertools",
    "lastmod",
    "lastrowid",
    "linkedin",
    "minmax",
    "mixins",
    "mywebsite",
    "necolas",
    "nextjs",
    "noice",
    "noopener",
    "noreferrer",
    "pietrobondioli",
    "pipocoin",
    "postgresql",
    "pydub",
    "pygame",
    "pytest",
    "repos",
    "takeblip",
    "tweepy",
    "urlset",
    "venv"
  ],
  // SQL Tools
  "sqltools.useNodeRuntime": true,
  // GitLens
  "gitlens.views.branches.branches.layout": "list",
  // HTML
  "html.format.wrapAttributes": "aligned-multiple",
  "[html]": {
    "editor.tabSize": 4
  },
  // CSS
  "[css]": {
    "editor.tabSize": 2
  },
  // SASS
  "[scss]": {
    "editor.tabSize": 2
  },
  // Javascript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.tabSize": 2
  },
  // Typescript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.tabSize": 2
  },
  // React
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  // Vue
  "[vue]": {
    "editor.defaultFormatter": "octref.vetur",
    "editor.tabSize": 2
  },
  // Python
  "python.showStartPage": false,
  "python.languageServer": "Jedi",
  "python.formatting.provider": "autopep8",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.tabSize": 4
  },
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  // Json
  "[json]": {
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  // Yaml
  "[yaml]": {
    "editor.tabSize": 4
  },
  // Markdown
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "tabnine.experimentalAutoImports": true,
  "editor.linkedEditing": true,
  "json.maxItemsComputed": 4000,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.colorTheme": "Dracula At Night"
}
